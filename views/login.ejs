    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Sistema de part√≠culas m√°gicas
        function createMagicParticles() {
            const container = document.getElementById('particles');
            const colors = ['#471e8a', '#923bf6', '#ffffff'];
            
            setInterval(() => {
                const particle = document.createElement('div');
                particle.className = 'particle';
                particle.style.left = Math.random() * 100 + '%';
                particle.style.animationDelay = Math.random() * 2 + 's';
                particle.style.animationDuration = (Math.random() * 3 + 4) + 's';
                particle.style.background = colors[Math.floor(Math.random() * colors.length)];
                
                container.appendChild(particle);
                
                setTimeout(() => {
                    particle.remove();
                }, 8000);
            }, 300);
        }
        
        // Inicializar part√≠culas
        createMagicParticles();
        
        // Sistema de loading avan√ßado
        document.getElementById('loginForm').addEventListener('submit', function(e) {
            const btn = document.getElementById('loginBtn');
            const inputs = document.querySelectorAll('.form-input');
            
            // Valida√ß√£o visual
            let isValid = true;
            inputs.forEach(input => {
                if (!input.validity.valid) {
                    isValid = false;
                    input.style.borderColor = '#ef4444';
                    input.parentElement.style.animation = 'shake 0.5s ease-in-out';
                }
            });
            
            if (!isValid) {
                e.preventDefault();
                return;
            }
            
            // Anima√ß√£o de loading
            btn.classList.add('loading');
            btn.disabled = true;
            
            // Simular processo de autentica√ß√£o
            const stages = [
                { text: 'Verificando credenciais...', duration: 1000 },
                { text: 'Conectando ao WhatsApp...', duration: 1500 },
                { text: 'Carregando dashboard...', duration: 1000 },
                { text: 'Quase pronto!', duration: 500 }
            ];
            
            let currentStage = 0;
            const loadingContent = btn.querySelector('.loading-content');
            
            function nextStage() {
                if (currentStage < stages.length) {
                    loadingContent.innerHTML = `
                        <div class="spinner"></div>
                        ${stages[currentStage].text}
                    `;
                    
                    setTimeout(() => {
                        currentStage++;
                        nextStage();
                    }, stages[currentStage].duration);
                } else {
                    // Sucesso
                    btn.style.background = 'linear-gradient(135deg, #10b981 0%, #059669 100%)';
                    loadingContent.innerHTML = `
                        <i class="bi bi-check-circle-fill"></i>
                        Logado com sucesso!
                    `;
                }
            }
            
            nextStage();
        });
        
        // Sistema de preenchimento autom√°tico
        document.getElementById('credentialsBadge').addEventListener('click', function() {
            const emailInput = document.getElementById('email');
            const passwordInput = document.getElementById('password');
            
            // Anima√ß√£o de preenchimento
            this.style.transform = 'scale(0.95)';
            setTimeout(() => {
                this.style.transform = 'scale(1)';
            }, 150);
            
            // Efeito de digita√ß√£o
            typeWriter(emailInput, 'admin@admin.com', () => {
                typeWriter(passwordInput, 'admin123', () => {
                    // Trigger de valida√ß√£o
                    emailInput.dispatchEvent(new Event('input'));
                    passwordInput.dispatchEvent(new Event('input'));
                });
            });
        });
        
        // Efeito de digita√ß√£o
        function typeWriter(element, text, callback) {
            element.value = '';
            element.focus();
            let i = 0;
            
            function type() {
                if (i < text.length) {
                    element.value += text.charAt(i);
                    element.dispatchEvent(new Event('input'));
                    i++;
                    setTimeout(type, 80);
                } else if (callback) {
                    setTimeout(callback, 200);
                }
            }
            
            type();
        }
        
        // Sistema de valida√ß√£o em tempo real aprimorado
        document.querySelectorAll('.form-input').forEach(input => {
            // Estados de erro espec√≠ficos
            const errorMessages = {
                email: {
                    valueMissing: 'Email √© obrigat√≥rio',
                    typeMismatch: 'Formato de email inv√°lido',
                    patternMismatch: 'Email deve ter formato v√°lido'
                },
                password: {
                    valueMissing: 'Senha √© obrigat√≥ria',
                    tooShort: 'Senha deve ter pelo menos 6 caracteres'
                }
            };
            
            input.addEventListener('input', function() {
                clearTimeout(this.validationTimeout);
                
                this.validationTimeout = setTimeout(() => {
                    validateInput(this);
                }, 300);
            });
            
            input.addEventListener('blur', function() {
                validateInput(this);
            });
            
            input.addEventListener('focus', function() {
                // Reset visual state
                this.style.borderColor = '#471e8a';
                const status = this.parentElement.querySelector('.input-status');
                status.className = 'input-status bi bi-check-circle-fill';
            });
        });
        
        function validateInput(input) {
            const status = input.parentElement.querySelector('.input-status');
            const icon = input.parentElement.querySelector('.input-icon');
            
            if (input.validity.valid && input.value.length > 0) {
                // V√°lido
                input.style.borderColor = '#10b981';
                status.className = 'input-status bi bi-check-circle-fill';
                status.style.color = '#10b981';
                icon.style.animation = 'iconBounce 0.6s ease-out';
                
                // Efeito de sucesso
                createSuccessParticles(input);
                
            } else if (!input.validity.valid && input.value.length > 0) {
                // Inv√°lido
                input.style.borderColor = '#ef4444';
                status.className = 'input-status bi bi-x-circle-fill';
                status.style.color = '#ef4444';
                icon.style.animation = 'iconShake 0.5s ease-out';
                
            } else {
                // Neutro
                input.style.borderColor = '#e2e8f0';
                status.style.opacity = '0';
            }
        }
        
        // Part√≠culas de sucesso
        function createSuccessParticles(element) {
            const rect = element.getBoundingClientRect();
            const colors = ['#10b981', '#059669', '#34d399'];
            
            for (let i = 0; i < 5; i++) {
                setTimeout(() => {
                    const particle = document.createElement('div');
                    particle.style.position = 'fixed';
                    particle.style.left = (rect.right - 20) + 'px';
                    particle.style.top = (rect.top + rect.height / 2) + 'px';
                    particle.style.width = '6px';
                    particle.style.height = '6px';
                    particle.style.background = colors[Math.floor(Math.random() * colors.length)];
                    particle.style.borderRadius = '50%';
                    particle.style.pointerEvents = 'none';
                    particle.style.zIndex = '10000';
                    particle.style.animation = `successParticle 1s ease-out forwards`;
                    
                    document.body.appendChild(particle);
                    
                    setTimeout(() => particle.remove(), 1000);
                }, i * 100);
            }
        }
        
        // CSS din√¢mico para part√≠culas
        const dynamicStyle = document.createElement('style');
        dynamicStyle.textContent = `
            @keyframes successParticle {
                0% { 
                    transform: scale(0) translate(0, 0); 
                    opacity: 1; 
                }
                50% { 
                    transform: scale(1) translate(${Math.random() * 60 - 30}px, ${Math.random() * 60 - 30}px); 
                    opacity: 1; 
                }
                100% { 
                    transform: scale(0) translate(${Math.random() * 100 - 50}px, ${Math.random() * 100 - 50}px); 
                    opacity: 0; 
                }
            }
            
            @keyframes shake {
                0%, 100% { transform: translateX(0); }
                10%, 30%, 50%, 70%, 90% { transform: translateX(-5px); }
                20%, 40%, 60%, 80% { transform: translateX(5px); }
            }
        `;
        document.head.appendChild(dynamicStyle);
        
        // Easter eggs e efeitos especiais
        let clickCount = 0;
        document.querySelector('.logo-icon').addEventListener('click', function() {
            clickCount++;
            
            if (clickCount === 5) {
                // Ativar modo festa
                document.body.style.animation = 'rainbow 3s ease-in-out infinite';
                this.style.animation = 'morphPill 0.5s ease-in-out infinite';
                
                // Chuva de p√≠lulas
                for (let i = 0; i < 20; i++) {
                    setTimeout(() => {
                        createPillRain();
                    }, i * 200);
                }
                
                setTimeout(() => {
                    document.body.style.animation = '';
                    this.style.animation = 'morphPill 3s ease-in-out infinite';
                    clickCount = 0;
                }, 5000);
            }
        });
        
        function createPillRain() {
            const pill = document.createElement('div');
            pill.textContent = 'üíä';
            pill.style.position = 'fixed';
            pill.style.left = Math.random() * 100 + '%';
            pill.style.top = '-50px';
            pill.style.fontSize = '20px';
            pill.style.zIndex = '9999';
            pill.style.pointerEvents = 'none';
            pill.style.animation = 'pillFall 3s linear forwards';
            
            document.body.appendChild(pill);
            
            setTimeout(() => pill.remove(), 3000);
        }
        
        // Mais CSS din√¢mico
        const moreStyles = document.createElement('style');
        moreStyles.textContent = `
            @keyframes rainbow {
                0% { filter: hue-rotate(0deg) saturate(1.2); }
                100% { filter: hue-rotate(360deg) saturate(1.2); }
            }
            
            @keyframes pillFall {
                0% { 
                    transform: translateY(-50px) rotate(0deg); 
